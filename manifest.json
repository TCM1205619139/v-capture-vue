{
  "manifest_version": 3,
  "name": "tc-capture",
  "version": "1.0.0",
  "description": "vue3.x版本的 v-capture",
  "background": {
    "service_worker": "/js/background.js"
  },
  "action": {
    "default_popup": "/html/popup.html",
    "default_icon": {
      "16": "/images/png/get_started16.png",
      "32": "/images/png/get_started32.png",
      "48": "/images/png/get_started48.png",
      "128": "/images/png/get_started128.png"
    }
  },
  "options_page": "html/option.html",
  "icons": {
    "16": "/images/png/get_started16.png",
    "32": "/images/png/get_started32.png",
    "48": "/images/png/get_started48.png",
    "128": "/images/png/get_started128.png"
  },
  "content_security_policy": {
    "script-src": "none",
    "object-src": "none",
    "worker-src": "none"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "/js/content.js"
      ],
      "css": [],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*/*"
  ]
}